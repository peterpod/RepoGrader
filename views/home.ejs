<!doctype html>
<html lang="en">
<head>
  <title>GitGraded</title>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">


  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="/css/home.css">
  <script src="http://code.jquery.com/jquery-1.10.2.js"></script>
  <script src="http://code.jquery.com/ui/1.11.1/jquery-ui.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.1/js/materialize.min.js"></script>
  <link href="/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection"/>
  <link href="/css/style.css" type="text/css" rel="stylesheet" media="screen,projection"/>

  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

  <!-- <link href="/css/star-rating.css" media="all" rel="stylesheet" type="text/css" /> -->
  <!-- // <script src="/js/star-rating.js" type="text/javascript"></script> -->
  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <script src="https://cdn.socket.io/socket.io-1.3.7.js"></script>
  <script src="../../js/grades.js"></script>

</head>
<body>
  <nav class="blue-grey lighten-5" style="padding-left: 2em;" role="navigation">
    <a href="/home" class="blue-grey-text darken-3-text" style="float: left; margin-left: 2em; margin-right: 3em;">Git Graded</a>

    <!-- Form for search bar -->
    <form id="search" class="form-signin" action="/repos/" method= "GET" role="form" style="float: left; width: 50%;">
      <span class="input-group">
        <input id="searchText" name="searchText" type="text" class="form-control" placeholder='Search for a repository("user/repository")'>
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
      </span><!-- /input-group -->
    </form>
    <!-- /.col-lg-6 -->
    <!-- /.row -->

  </nav>
  <br>
  <!-- Launch grading modal button -->
   <div class="row">
    <div class="col-lg-4 col-centered text-center" style="margin-left: 55em;">
      <!-- Form for search bar -->
      <button type="button" class="btn" data-toggle="modal" data-target="#gradingModal">Edit Grading Formula</button>
    </div><!-- /.col-lg-4 -->
  </div><!-- /.row -->
  <!--Grading Modal -->
  <div class="modal fade" id="gradingModal" tabindex="-1" role="dialog" aria-labelledby="gradingModalLabel" style="z-index:1;">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="gradingModalLabel">Edit Formula</h4>
        </div>
        <div id="grading-modal-body" class="modal-body">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" id="regradeButton" class="btn btn-primary">Regrade Repositories</button>
        </div>
      </div>
    </div>
  </div><!-- End modal -->

  <div class="container">
      <!-- Intro text -->
      <div class="row">
          <% if(typeof repos != 'undefined') { %>
            <!-- render partial for each repo -->
            <% repos.forEach(function(repo){ %>
              <% include partials/repo %> 
            <% }); %>
          <% } %>  
      </div>

      <footer>
        <p class="col-centered text-center">&copy; Innovation for Information Systems 2015</p>
      </footer>
  </div> <!-- /container -->


  </body>
</html>
