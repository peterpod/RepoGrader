 -->
  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <!-- stars -->
  <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">

  <link href="../../../../css/star-rating.css" media="all" rel="stylesheet" type="text/css" />

  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

  <script src="../../../../js/star-rating.js" type="text/javascript"></script>

  <link rel="stylesheet" href="../../../../css/style.css">
</head>
<body>
  <nav class="blue-grey lighten-5" style="padding-left: 2em;" role="navigation">
    <a href="/home" class="blue-grey-text darken-3-text" style="float: left; margin-left: 2em; margin-right: 3em;">Git Graded</a>

    <!-- Form for search bar -->    <!-- /.row -->

  </nav>

            <% if ( typeof message  != 'undefined') { %>
                <div class="alert alert-danger alert-dismissible" role="alert"> Could not find repository! 
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
            <% } %>

          </div><!-- /.col-lg-6 -->
        </div><!-- /.row -->

        <br/>
        <!-- Launch grading modal button -->
         <div class="row">
        <div class="col-lg-4 col-centered text-center" style="margin-left: 55em;">
            <!-- Form for search bar -->
            <button type="button" class="btn" data-toggle="modal" data-target="#gradingModal">Edit Grading Formula</button>
          </div><!-- /.col-lg-4 -->
        </div><!-- /.row -->
        <!--Grading Modal -->
        <div class="modal fade" id="gradingModal" tabindex="-1" role="dialog" aria-labelledby="gradingModalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>       </button>
                <h4 class="modal-title" id="gradingModalLabel">Edit Formula</h4>
              </div>
              <div id="grading-modal-body" class="modal-body">
                
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" id="regradeButton" class="btn btn-primary">Regrade Repositories</button>
              </div>
            </div>
          </div>
        </div><!-- End modal -->
      </div>
    </div>

	<div class="container">
      <!-- Review Form -->
      <div class="row">
          <!-- Check to see if we are adding a review -->
          <% if(typeof addReview!='undefined') { %>
            <% include partials/addReview %> 
          <% } else { %>
          <div class="col-sm-6">
          <h2><%= user %>/<%= repo%></h2> 
            <div class="panel panel-default">
              <div class="panel-body">
                  <!-- Just display all reviews -->
                  <% reviews.forEach(function(review){ %>
                    <strong><%= review.subject %></strong>
                    <p><%= review.review %></p>
                    <p>By <strong><%= review.username %></strong> on <%= review.date %></p>
                    <!-- stars -->
                    <input id="rating-system" type="number" name="star" class="rating" min="1" max="5" step="1" readonly="true" value="<%= review.star %>">
                    <hr>
                  <% }); %>
              </div>
             </div>
          </div>
          <% } %>
      </div>

      <footer>
        <p class="col-centered text-center">&copy; Innovation for Information Systems 2015</p>
      </footer>
  </div> <!-- /container -->
  </body>
</html>
