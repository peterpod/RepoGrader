	<div class="container">
      <!-- Review Form -->
      <div class="row">
          <!-- Check to see if we are adding a review -->
          <% if(typeof addReview!='undefined') { %>
            <% include partials/addReview %> 
          <% } else { %>
          <div class="col-sm-6">
            <a href='/repos/' class="btn btn-default" style='float:right;' aria-label="Left Align">Back</a>
            <h2><%= user %>/<%= repo%></h2> 
              <div class="panel panel-default">
                <div class="panel-body">
                    <!-- Just display all reviews -->
                    <% reviews.forEach(function(review){ %>
                      <strong><%= review.subject %></strong>
                      <p><%= review.review %></p>
                      <p>By <strong><%= review.username %></strong> on <%= review.date %></p>
                      <!-- stars -->
                      <input id="rating-system" type="number" name="star" class="rating" min="1" max="5" step="1" readonly="true" value="<%= review.star %>">
                      <hr>
                    <% }); %>
                </div>
              </div>
          </div>
          <% } %>
      </div>

      <footer>
        <p class="col-centered text-center">&copy; Innovation for Information Systems 2015</p>
      </footer>
  </div> <!-- /container -->
