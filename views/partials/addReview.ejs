<div class="col-sm-6">
  <a href='/repos/' class="btn btn-default" style='float:right; margin-top:20px;' aria-label="Left Align">Back</a>
  <h2>Add a Repo review</h2>
  <form role="form" method="POST" action="/repos/review/">
    <div class="form-group">
      <label for="username">Username:</label>
      <input placeholder="username" required="true" class="form-control" name="username">
    </div>
    <div class="form-group">
      <label for="subject">Subject:</label>
      <input placeholder="subject" required="true" class="form-control" name="subject">
    </div>

    <div class="textbox">
      <input type="hidden"required="true"  class="form-control" name="date" value="<%= new Date().toDateString() %>">
      <input type="hidden"required="true"  class="form-control" name="user" value="<%= addReview.user %>">
      <input type="hidden" required="true" class="form-control" name="repo" value="<%= addReview.repo %>">
      <label for="review">Review:</label>
      <textarea required="true" class="form-control" name="review" rows="4" placeholder="Write your review here"></textarea>
    </div>
    
    <br>
    <input id="rating-system" type="number" name="star" class="rating" min="1" max="5" step="1">
    <br>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>